@using Zebra.VMI.Report.Common
<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">菜鸟台账</li>
</ol>

<ol class="breadcrumb">
    <form action="/CN/" method="post" class="form-inline" id="searchForm">
        <div class="form-group">
            <label>SKU</label>
            <input type="text" class="form-control" placeholder="SKU" name="SKU" value="@ViewBag.FilterModel.SKU">
        </div>
        <div class="form-group">
            <label>开始</label>
            <input type="text" class="form-control" placeholder="2017-01-01" name="StartTime" value="@ViewBag.FilterModel.StartTime.ToString("yyyy-MM-dd")">
        </div>
        <div class="form-group">
            <label>结束</label>
            <input type="text" class="form-control" placeholder="2017-01-01" name="EndTime" value="@ViewBag.FilterModel.EndTime.ToString("yyyy-MM-dd")">
        </div>
        <button type="submit" class="btn btn-default">查 询</button>
    </form>
</ol>

<table class="table table-hover">
    <thead>
        <tr>
            <th>仓库</th>
            <th>SKU</th>
            <th>正次品</th>
            <th>批次号</th>
            <th>数量</th>
            <th>台账时间</th>
        </tr>
    </thead>
    <tbody>
        @foreach (InventorySnapshot i in ViewBag.Items)
        {
            <tr>
                <td>@i.WarehouseId</td>
                <td>@i.ItemId</td>
                <td>
                    @if (i.InventoryType == 0)
                    {
                        <span>正品</span>
                    }
                    else
                    {
                        <span>次品</span>
                    }
                </td>
                <td>@i.BatchCode</td>
                <td>@i.Quantity</td>
                <td>@i.ModifiedTime.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>